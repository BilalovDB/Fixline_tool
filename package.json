{
    "name": "winccext",
    "displayName": "WinCCOA Open panel",
    "description": "Open panel",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.OpenPanel",
        "onCommand:extension.CheckScript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.OpenPanel",
                "title": "Open panel",
                "icon": "$(open-preview)"
            },
            {
                "command": "extension.CheckScript",
                "title": "Check Script",
                "icon": "$(debug)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.OpenPanel",
                    "when": "resourceExtname == .xml",
                    "group": "navigation@6"
                },
                {
                    "command": "extension.CheckScript",
                    "when": "resourceExtname == .ctl",
                    "group": "navigation@6"
                }
            ],
            "editor/title": [
                {
                  "command": "extension.OpenPanel",
                  "group": "navigation",
                  "when": "resourceExtname == .xml"
                },
                {
                    "command": "extension.CheckScript",
                    "group": "navigation",
                    "when": "resourceExtname == .ctl"
                  }
            ]
        },
        "configuration": [
            {
                "title": "WinCCOA open panel",
                "properties": {
                    "OpenPanel.commands": {
                        "type": "array",
                        "items": {
                            "type": [
                                "object"
                            ],
                            "properties": {
                                "projName": {
                                    "type": "string",
                                    "description": "Name of project."
                                },
                                "pathWinCC": {
                                    "type": "string",
                                    "description": "Path to install WinCCOA. Example C:/Siemens/Automation/WinCC_OA/3.18"
                                },
                                "user": {
                                    "user": "string",
                                    "description": "UserName"
                                },
                                "pass": {
                                    "user": "string",
                                    "description": "Password"
                                }
                            }
                        },
                        "default": [
                            {
                                "projName": "PimsVTZSM",
                                "pathWinCC": "C:/Siemens/Automation/WinCC_OA/3.18",
                                "user": "root",
                                "pass": ""
                            }
                        ]
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.71.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    }
}